{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clockscape",
  "version": "0.1.0",
  "identifier": "com.clockscape.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../src"
  },
  "app": {
    "windows": [
      {
        "fullscreen": true,
        "resizable": true,
        "title": "ClockScape",
        "decorations": false,
        "transparent": false,
        "minWidth": 1024,
        "minHeight": 768
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
